<dl class="see">
  <dt><%= @model.t :name %></dt>
  <dd><%= @item.name %></dd>

  <dt><%= @model.t :host %></dt>
  <dd><%= @item.host %></dd>

  <dt><%= @model.t :domains %></dt>
  <dd><%= @item.domains %></dd>

  <dt><%= @model.t :subdir %></dt>
  <dd><%= @item.subdir %></dd>

  <dt><%= @model.t :https %></dt>
  <dd><%= @item.label :https %></dd>

  <dt><%= @model.t :mypage_scheme %></dt>
  <dd><%= @item.label :mypage_scheme %></dd>

  <dt><%= @model.t :mypage_domain %></dt>
  <dd><%= @item.mypage_domain %></dd>

  <% url = cms_login_url(protocol: @item.mypage_scheme.presence || 'http', host: @item.mypage_domain.presence || @item.domain) %>
  <dd><%= t("ss.login_url") %>: <%= link_to url, url %></dd>

  <dt><%= @model.t :script_level %></dt>
  <dd><%= @item.label :script_level %></dd>
</dl>
