<% html = nil %>
<% form_for(:item) do |f| %>
  <% f.fields_for :column_values do |g| %>
    <% html = capture do %>
      <div>
        <div class="addon-head toggle-head"><h2><%= @item.name %></h2></div>
        <div class="addon-body toggle-body">
          <%= render file: '_form.html.erb', locals: { f: g } %>
        </div>
      </div>
    <% end %>
  <% end %>
<% end %>
<%= html %>
