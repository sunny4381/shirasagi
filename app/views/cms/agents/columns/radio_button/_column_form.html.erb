<% value ||= nil %>
<% controller ||= false %>
<%= render 'cms/agents/columns/main/base', f: f, column: column, value: value, controller: controller do %>
  <% column.select_options.each do |val| %>
    <label>
      <%= radio_button_tag("#{f.object_name}[][value]", val, value.try(:value) == val, column.form_options.merge(id: nil)) %>
      <%= val %>
    </label>
  <% end %>
<% end %>
